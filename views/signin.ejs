<main class = "container mx-auto mt-20 flex justify-center">   
    <div class = "max-w-lg w-md">    
        <form action="/signin" method = "POST" class = "flex flex-col px-4 py-4" onsubmit = "">    
            <h2 class = "text-3xl font-semibold text-center mb-4">SignIn To Explore Our Features</h2> 
            <div class = "flex flex-col py-4 gap-y-2">  
                <label for="username">Username</label>
                <input type="text" name = "username" id = "username" class = "px-4 py-2 rounded-md border border-slate-400 focus:outline-none focus:ring-2 ring-offset-2 ring-slate-200" required/>    
            </div>

            <div class = "flex flex-col py-4 gap-y-2">
                <label for="password">Password</label>
                <input type="password" name = "password" id = "password" class = "px-4 py-2 rounded-md border border-slate-400 focus:outline-none focus:ring-2 ring-offset-2 ring-slate-200" required/> 
            </div>

            <div class = "mt-4 flex justify-center">   
                <button type = "submit" class = "w-1/2 py-2 cursor-pointer bg-teal-500 hover:bg-teal-600 font-semibold rounded-lg shadow-md shadow-slate-300 ">SignIn</button>
            </div>
        </form>

        <div class = "mt-5 flex flex-col border-t border-slate-300 py-6 px-2">   
            <div class = "flex flex-col justify-center items-center">  
                <h4 class = "font-semibold text-xl text-slate-600 ">Don't have an Account yet?</h4> 
                <a href="/signup" class = "underline text-lg mt-2 text-teal-500 font-bold px-4 py-2">Signup</a> 
                <h2 class = "my-2 font-xl font-semibold text-slate-700">Or</h2>
                <a href="/" class = "px-4 py-2 rounded-md bg-slate-700 text-white font-semibold shadow-md shadow-slate-300">Return Home</a>
            </div>
        </div>
    </div>

    <script>
        function submitSingin(e){
            e.preventDefault(); 
            let username = document.getElementsByName("username")[0].value; 
            let password = document.getElementsByName("password")[0].password; 
            
            data = {username, password}  

            fetch("/signin", {
                method:"POST", 
                headers:{"Content-Type":"application/json"}, 
                data:JSON.stringify(data) 
            }).then(msg => console.log(msg)).catch(err => {console.log("Erro Occured!"); console.log(err)}) 
        }
    </script>
</main>